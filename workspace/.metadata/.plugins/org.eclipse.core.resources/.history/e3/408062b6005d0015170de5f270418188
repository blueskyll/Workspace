package chapter15;

public class DecoratorTest38 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Chocolate c = new Chocolate(new Milk(new BasicCoffee()));
		System.out.println(c.getDesciption());
	}

}

class BasicCoffee{
	public String getDescription(){
		return "Coffee";
	}
}

class Decorator extends BasicCoffee{
	BasicCoffee bc;
	public Decorator(BasicCoffee bc){
		this.bc = bc;
	}
}

class Milk extends Decorator{
	public Milk(BasicCoffee bc){
		super(bc);
	}
	
	public String getDescription(){
		return super.getDescription() + " with Milk";
	}
}

class Chocolate extends Decorator{
	public Chocolate(BasicCoffee bc){
		super(bc);
	}
	
	public String getDesciption(){
		return super.getDescription() + " with chocolate";
	}
}